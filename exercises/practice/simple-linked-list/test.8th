"simple-linked-list-test.8th" f:include
needs exercism/test
with: test
16 tests

"Empty list"
  list <- nil
    ( list isNil )
    true?

SKIP-REST-OF-TESTS

"Single item list value"
  list <- create 1 nil
  expect_equal(datum(list), 1)
        
"Single item list has no next item"
  list <- create 1 nil
  expect_true(next list |> isNil)
        
"Two item list first value"
  list <- create 2 (create 1 nil)
  expect_equal(datum(list), 2)
    
"Two item list second value"
  list <- create 2 (create 1 nil)
  expect_equal(next list |> datum, 1)
    
"Two item list second item has no next"
  list <- create 2 (create 1 nil)
  expect_true(next list |> next |> isNil)
        
"To list"
  values <- create 2 (create 1 nil) |> toList
  expect_equal(values, [2, 1])
        
"From list"
  list <- fromList [11, 7, 5, 3, 2]
  expect_equal(list |> datum, 11)
  expect_equal(list |> next |> datum, 7)
  expect_equal(list |> next |> next |> datum, 5)
  expect_equal(list |> next |> next |> next |> datum, 3)
  expect_equal(list |> next |> next |> next |> next |> datum, 2)

"Reverse length 1"
  values <- [1..1]
  list <- fromList values
  reversed <- reverse list
  expect_equal(reversed |> toList, <| List.rev values)

"Reverse length 2"
  values <- [1..2]
  list <- fromList values
  reversed <- reverse list
  expect_equal(reversed |> toList, <| List.rev values )

"Reverse length 10"
  values <- [1..10]
  list <- fromList values
  reversed <- reverse list
  expect_equal(reversed |> toList, <| List.rev values )

"Reverse length 100"
  values <- [1..100]
  list <- fromList values
  reversed <- reverse list
  expect_equal(reversed |> toList, <| List.rev values )

"Roundtrip length 1"
  values <- [1..1]
  listValues <- fromList values
  expect_equal(listValues |> toList, values)

"Roundtrip length 2"
  values <- [1..2]
  listValues <- fromList values
  expect_equal(listValues |> toList, values)

"Roundtrip length 10"
  values <- [1..10]
  listValues <- fromList values
  expect_equal(listValues |> toList, values)

"Roundtrip length 100"
  values <- [1..100]
  listValues <- fromList values
  expect_equal(listValues |> toList, values)

end-of-tests
;with
