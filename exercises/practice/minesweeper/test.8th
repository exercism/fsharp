"minesweeper.8th" f:include
needs exercism/test
with: test
12 tests

"No rows"
  minefield = c()
  expected = c()
  expect_equal(annotate(minefield), expected)

SKIP-REST-OF-TESTS

"No columns"
  minefield <- [""]
  expected <- [""]
  expect_equal(annotate(minefield), expected)

"No mines"
  minefield <- 
        [ "   ";
          "   ";
          "   " ]
  expected <- 
        [ "   ";
          "   ";
          "   " ]
  expect_equal(annotate(minefield), expected)

"Minefield with only mines"
  minefield <- 
        [ "***";
          "***";
          "***" ]
  expected <- 
        [ "***";
          "***";
          "***" ]
  expect_equal(annotate(minefield), expected)

"Mine surrounded by spaces"
  minefield <- 
        [ "   ";
          " * ";
          "   " ]
  expected <- 
        [ "111";
          "1*1";
          "111" ]
  expect_equal(annotate(minefield), expected)

"Space surrounded by mines"
  minefield <- 
        [ "***";
          "* *";
          "***" ]
  expected <- 
        [ "***";
          "*8*";
          "***" ]
  expect_equal(annotate(minefield), expected)

"Horizontal line"
  minefield <- [" * * "]
  expected <- ["1*2*1"]
  expect_equal(annotate(minefield), expected)

"Horizontal line, mines at edges"
  minefield <- ["*   *"]
  expected <- ["*1 1*"]
  expect_equal(annotate(minefield), expected)

"Vertical line"
  minefield <- 
        [ " ";
          "*";
          " ";
          "*";
          " " ]
  expected <- 
        [ "1";
          "*";
          "2";
          "*";
          "1" ]
  expect_equal(annotate(minefield), expected)

"Vertical line, mines at edges"
  minefield <- 
        [ "*";
          " ";
          " ";
          " ";
          "*" ]
  expected <- 
        [ "*";
          "1";
          " ";
          "1";
          "*" ]
  expect_equal(annotate(minefield), expected)

"Cross"
  minefield <- 
        [ "  *  ";
          "  *  ";
          "*****";
          "  *  ";
          "  *  " ]
  expected <- 
        [ " 2*2 ";
          "25*52";
          "*****";
          "25*52";
          " 2*2 " ]
  expect_equal(annotate(minefield), expected)

"Large minefield"
  minefield <- 
        [ " *  * ";
          "  *   ";
          "    * ";
          "   * *";
          " *  * ";
          "      " ]
  expected <- 
        [ "1*22*1";
          "12*322";
          " 123*2";
          "112*4*";
          "1*22*2";
          "111111" ]
  expect_equal(annotate(minefield), expected)

end-of-tests
;with
