"acronym.8th" f:include
needs exercism/test
with: test
9 tests

test_that("Basic", {
    expect_equal(abbreviate "Portable Network Graphics"
    "PNG"
    equal?
})

SKIP-REST-OF-TESTS

test_that("Lowercase words", {
    expect_equal(abbreviate "Ruby on Rails"
    "ROR"
    equal?
})

test_that("Punctuation", {
    expect_equal(abbreviate "First In, First Out"
    "FIFO"
    equal?
})

test_that("All caps word", {
    expect_equal(abbreviate "GNU Image Manipulation Program"
    "GIMP"
    equal?
})

test_that("Punctuation without whitespace", {
    expect_equal(abbreviate "Complementary metal-oxide semiconductor"
    "CMOS"
    equal?
})

test_that("Very long abbreviation", {
    expect_equal(abbreviate "Rolling On The Floor Laughing So Hard That My Dogs Came Over And Licked Me"
    "ROTFLSHTMDCOALM"
    equal?
})

test_that("Consecutive delimiters", {
    expect_equal(abbreviate "Something - I made up from thin air"
    "SIMUFTA"
    equal?
})

test_that("Apostrophes", {
    expect_equal(abbreviate "Halley's Comet"
    "HC"
    equal?
})

test_that("Underscore emphasis", {
    expect_equal(abbreviate "The Road _Not_ Taken"
    "TRNT"
    equal?
})
