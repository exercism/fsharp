"reverse-string.8th" f:include
needs exercism/test
with: test
6 tests

"An empty string"
  expect_equal(reverse("", ""))

SKIP-REST-OF-TESTS

"A word"
    expect_equal(reverse("robot"
    "tobor"
    equal?)

"A capitalized word"
    expect_equal(reverse("Ramen"
    "nemaR"
    equal?)

"A sentence with punctuation"
    ( "I'm hungry!" reverse )
    "!yrgnuh m'I"
    equal?

"A palindrome"
    expect_equal(reverse("racecar"
    "racecar"
    equal?)

"An even-sized word"
    expect_equal(reverse("drawer"
    "reward"
    equal?)
