~ "reverse-string.ua" ~ ReverseString

# An empty string
⍤⤙≍ "" reverse ""

# A word
⍤⤙≍ "tobor" reverse "robot"

# A capitalized word
⍤⤙≍ "nemaR" reverse "Ramen"

# A sentence with punctuation
⍤⤙≍ "!yrgnuh m'I" reverse "I'm hungry!"

# A palindrome
⍤⤙≍ "racecar" reverse "racecar"

# An even-sized word
⍤⤙≍ "reward" reverse "drawer"

