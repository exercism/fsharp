"atbash-cipher.8th" f:include
needs exercism/test
with: test
14 tests

"Encode yes"
    expect_equal(encode("yes"
    "bvh"
    equal?)

SKIP-REST-OF-TESTS

"Encode no"
    expect_equal(encode("no"
    "ml"
    equal?)

"Encode OMG"
    expect_equal(encode("OMG"
    "lnt"
    equal?)

"Encode spaces"
    ( "O M G" encode )
    "lnt"
    equal?

"Encode mindblowingly"
    ( "mindblowingly" encode )
    "nrmwy oldrm tob"
    equal?

"Encode numbers"
    ( "Testing,1 2 3, testing." encode )
    "gvhgr mt123 gvhgr mt"
    equal?

"Encode deep thought"
    ( "Truth is fiction." encode )
    "gifgs rhurx grlm"
    equal?

"Encode all the letters"
    ( "The quick brown fox jumps over the lazy dog." encode )
    "gsvjf rxpyi ldmul cqfnk hlevi gsvoz abwlt"
    equal?

"Decode exercism"
    ( "vcvix rhn" decode )
    "exercism"
    equal?

"Decode a sentence"
    ( "zmlyh gzxov rhlug vmzhg vkkrm thglm v" decode )
    "anobstacleisoftenasteppingstone"
    equal?

"Decode numbers"
    ( "gvhgr mt123 gvhgr mt" decode )
    "testing123testing"
    equal?

"Decode all the letters"
    ( "gsvjf rxpyi ldmul cqfnk hlevi gsvoz abwlt" decode )
    "thequickbrownfoxjumpsoverthelazydog"
    equal?

"Decode with too many spaces"
    ( "vc vix    r hn" decode )
    "exercism"
    equal?

"Decode with no spaces"
    expect_equal(decode("zmlyhgzxovrhlugvmzhgvkkrmthglmv"
    "anobstacleisoftenasteppingstone"
    equal?)
