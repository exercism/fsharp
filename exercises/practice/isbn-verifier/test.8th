"isbn-verifier.8th" f:include
needs exercism/test
with: test
19 tests

"Valid isbn"
  expect_true(isValid "3-598-21508-8")

SKIP-REST-OF-TESTS

"Invalid isbn check digit"
  expect_false(isValid "3-598-21508-9")

"Valid isbn with a check digit of 10"
  expect_true(isValid "3-598-21507-X")

"Check digit is a character other than X"
  expect_false(isValid "3-598-21507-A")

"Invalid check digit in isbn is not treated as zero"
  expect_false(isValid "4-598-21507-B")

"Invalid character in isbn is not treated as zero"
  expect_false(isValid "3-598-P1581-X")

"X is only valid as a check digit"
  expect_false(isValid "3-598-2X507-9")

"Valid isbn without separating dashes"
  expect_true(isValid "3598215088")

"Isbn without separating dashes and X as check digit"
  expect_true(isValid "359821507X")

"Isbn without check digit and dashes"
  expect_false(isValid "359821507")

"Too long isbn and no dashes"
  expect_false(isValid "3598215078X")

"Too short isbn"
  expect_false(isValid "00")

"Isbn without check digit"
  expect_false(isValid "3-598-21507")

"Check digit of X should not be used for 0"
  expect_false(isValid "3-598-21515-X")

"Empty isbn"
  expect_false(isValid "")

"Input is 9 characters"
  expect_false(isValid "134456729")

"Invalid characters are not ignored after checking length"
  expect_false(isValid "3132P34035")

"Invalid characters are not ignored before checking length"
  expect_false(isValid "3598P215088")

"Input is too long but contains a valid isbn"
  expect_false(isValid "98245726788")
