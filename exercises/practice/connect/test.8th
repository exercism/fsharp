"connect.8th" f:include
needs exercism/test
with: test
10 tests

"An empty board has no winner"
  board <- 
        [ ". . . . .    ";
          " . . . . .   ";
          "  . . . . .  ";
          "   . . . . . ";
          "    . . . . ." ]
  expect_equal(winner(board), None)

SKIP-REST-OF-TESTS

"X can win on a 1x1 board"
  board <- ["X"]
  expect_equal(winner(board), Black)

"O can win on a 1x1 board"
  board <- ["O"]
  expect_equal(winner(board), White)

"Only edges does not make a winner"
  board <- 
        [ "O O O X   ";
          " X . . X  ";
          "  X . . X ";
          "   X O O O" ]
  expect_equal(winner(board), None)

"Illegal diagonal does not make a winner"
  board <- 
        [ "X O . .    ";
          " O X X X   ";
          "  O X O .  ";
          "   . O X . ";
          "    X X O O" ]
  expect_equal(winner(board), None)

"Nobody wins crossing adjacent angles"
  board <- 
        [ "X . . .    ";
          " . X O .   ";
          "  O . X O  ";
          "   . O . X ";
          "    . . O ." ]
  expect_equal(winner(board), None)

"X wins crossing from left to right"
  board <- 
        [ ". O . .    ";
          " O X X X   ";
          "  O X O .  ";
          "   X X O X ";
          "    . O X ." ]
  expect_equal(winner(board), Black)

"O wins crossing from top to bottom"
  board <- 
        [ ". O . .    ";
          " O X X X   ";
          "  O O O .  ";
          "   X X O X ";
          "    . O X ." ]
  expect_equal(winner(board), White)

"X wins using a convoluted path"
  board <- 
        [ ". X X . .    ";
          " X . X . X   ";
          "  . X . X .  ";
          "   . X X . . ";
          "    O O O O O" ]
  expect_equal(winner(board), Black)

"X wins using a spiral path"
  board <- 
        [ "O X X X X X X X X        ";
          " O X O O O O O O O       ";
          "  O X O X X X X X O      ";
          "   O X O X O O O X O     ";
          "    O X O X X X O X O    ";
          "     O X O O O X O X O   ";
          "      O X X X X X O X O  ";
          "       O O O O O O O X O ";
          "        X X X X X X X X O" ]
  expect_equal(winner(board), Black)
