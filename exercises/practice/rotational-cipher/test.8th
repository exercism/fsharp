"rotational-cipher.8th" f:include
needs exercism/test
with: test
10 tests

"Rotate a by 0, same output as input"
    expect_equal(rotate 0 "a"
    "a"
    equal?

SKIP-REST-OF-TESTS

"Rotate a by 1"
    expect_equal(rotate 1 "a"
    "b"
    equal?

"Rotate a by 26, same output as input"
    expect_equal(rotate 26 "a"
    "a"
    equal?

"Rotate m by 13"
    expect_equal(rotate 13 "m"
    "z"
    equal?

"Rotate n by 13 with wrap around alphabet"
    expect_equal(rotate 13 "n"
    "a"
    equal?

"Rotate capital letters"
    expect_equal(rotate 5 "OMG"
    "TRL"
    equal?

"Rotate spaces"
    expect_equal(rotate 5 "O M G"
    "T R L"
    equal?

"Rotate numbers"
    expect_equal(rotate 4 "Testing 1 2 3 testing"
    "Xiwxmrk 1 2 3 xiwxmrk"
    equal?

"Rotate punctuation"
    expect_equal(rotate 21 "Let's eat, Grandma!"
    "Gzo'n zvo, Bmviyhv!"
    equal?

"Rotate all letters"
    expect_equal(rotate 13 "The quick brown fox jumps over the lazy dog."
    "Gur dhvpx oebja sbk whzcf bire gur ynml qbt."
    equal?
