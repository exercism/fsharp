"collatz-conjecture.8th" f:include
needs exercism/test
with: test
6 tests

"Zero steps for one"
  expect_equal(steps(1), 0)

SKIP-REST-OF-TESTS

"Divide if even"
  expect_equal(steps(16), 4)

"Even and odd steps"
  expect_equal(steps(12), 9)

"Large number of even and odd steps"
  expect_equal(steps(1000000), 152)

"Zero is an error"
  expect_equal(steps(0), None)

"Negative value is an error"
  expect_equal(steps -15, None)
